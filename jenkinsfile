pipeline {
	agent any

	stages {
		stage('checkout') {
			steps {
				checkout scm
			}
		}
		stage('build') {
			steps {
				script {
					bat "dotnet restore"
					bat "dotnet build --configuration Release"
				}
			}
		}
		stage('test') {
			steps {
				script {
					bat "dotnet test --no-restore --configuration Release"
				}
			}
		}
	}
}